{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "src",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "types": ["node"],
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}
